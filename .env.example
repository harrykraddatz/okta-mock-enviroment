# Configuração do Okta Mock Server

# Domínio do Okta (para ambiente local)
OKTA_DOMAIN=localhost:8080

# Token de API para autenticação
OKTA_API_TOKEN=test-api-token-12345

# Porta do servidor
PORT=8080

# Ambiente
NODE_ENV=development

# Nível de log (debug, info, warn, error)
LOG_LEVEL=debug

# JWT Secret (para geração de tokens)
JWT_SECRET=your-secret-key-change-in-production

# Tempo de expiração do token (em segundos)
TOKEN_EXPIRATION=3600

# Habilitar CORS
ENABLE_CORS=true

# URL base da API
API_BASE_URL=http://localhost:8080
